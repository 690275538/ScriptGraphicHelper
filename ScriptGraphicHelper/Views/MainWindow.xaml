<Window
    x:Class="ScriptGraphicHelper.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Avalonia.Xaml.Interactivity"
    xmlns:ic="using:Avalonia.Xaml.Interactions.Core"
    xmlns:ivc="using:ScriptGraphicHelper.ViewModels.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
    xmlns:vm="using:ScriptGraphicHelper.ViewModels"
    Title="综合图色助手 V1.1.8"
    Width="1450"
    Height="825"
    FontFamily="Microsoft YaHei"
    Icon="/Assets/ico.ico"
    KeyDown="Window_KeyDown"
    Opened="Window_Opened"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid
        Name="MyGrid"
        Background="#303030">
        <ScrollViewer
            Focusable="False"
            HorizontalScrollBarVisibility="Hidden"
            VerticalScrollBarVisibility="Hidden">
            <StackPanel
                Margin="20,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Orientation="Vertical">
                <StackPanel Margin="0,10" Orientation="Horizontal">
                    <Image Width="24" Height="24">
                        <Image.Source>
                            <svg:SvgImage Source="/Assets/mode.svg" />
                        </Image.Source>
                    </Image>
                    <ComboBox
                        Name="EmulatorOptions"
                        Width="93"
                        Margin="10,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderBrush="#666666"
                        BorderThickness="0,0,0,1"
                        FontSize="14"
                        Items="{Binding EmulatorInfo, Mode=TwoWay}"
                        SelectedIndex="{Binding EmulatorSelected, Mode=TwoWay}" />
                </StackPanel>
                <Button
                    Name="ScreenShot"
                    Width="129"
                    Margin="0,7"
                    HorizontalContentAlignment="Center"
                    BorderBrush="#666666"
                    FontSize="16">
                    截图
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="重置选择" />
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
                <Button
                    Name="Load"
                    Width="129"
                    Margin="0,7"
                    HorizontalContentAlignment="Center"
                    Command="{Binding Load_Click}"
                    FontSize="16">
                    载入
                </Button>
                <Button
                    Name="Save"
                    Width="129"
                    Margin="0,7"
                    HorizontalContentAlignment="Center"
                    FontSize="16">
                    保存
                </Button>
                <Button
                    Name="TurnRight"
                    Width="129"
                    Margin="0,7"
                    HorizontalContentAlignment="Center"
                    FontSize="16">
                    右转
                </Button>
                <Button
                    Name="Test"
                    Width="129"
                    Margin="0,7"
                    HorizontalContentAlignment="Center"
                    FontSize="16">
                    测试
                </Button>
                <StackPanel Margin="0,7" Orientation="Horizontal">
                    <Image Width="24" Height="24">
                        <Image.Source>
                            <svg:SvgImage Source="/Assets/sim.svg" />
                        </Image.Source>
                    </Image>
                    <ComboBox
                        Name="Sim"
                        Width="93"
                        Margin="10,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderBrush="#666666"
                        BorderThickness="0,0,0,1"
                        FontSize="14"
                        SelectedIndex="{Binding SimSelected, Mode=TwoWay}">
                        <ComboBoxItem>100</ComboBoxItem>
                        <ComboBoxItem>95</ComboBoxItem>
                        <ComboBoxItem>90</ComboBoxItem>
                        <ComboBoxItem>85</ComboBoxItem>
                        <ComboBoxItem>80</ComboBoxItem>
                        <ComboBoxItem>自定义</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                <StackPanel Margin="0,7" Orientation="Horizontal">
                    <Image Width="24" Height="24">
                        <Image.Source>
                            <svg:SvgImage Source="/Assets/test.svg" />
                        </Image.Source>
                    </Image>
                    <TextBox
                        Name="Result"
                        Width="93"
                        Margin="10,0"
                        Background="Transparent"
                        BorderBrush="#666666"
                        BorderThickness="0,0,0,1"
                        FontSize="14"
                        IsReadOnly="True" />
                </StackPanel>
                <StackPanel Margin="0,7" Orientation="Horizontal">
                    <Image Width="24" Height="24">
                        <Image.Source>
                            <svg:SvgImage Source="/Assets/format.svg" />
                        </Image.Source>
                    </Image>
                    <ComboBox
                        Name="Format"
                        Width="93"
                        Margin="10,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderBrush="#666666"
                        BorderThickness="0,0,0,1"
                        FontSize="14"
                        SelectedIndex="{Binding FormatSelected, Mode=TwoWay}">
                        <ComboBoxItem>多点比色</ComboBoxItem>
                        <ComboBoxItem>大漠找色</ComboBoxItem>
                        <ComboBoxItem>按键找色</ComboBoxItem>
                        <ComboBoxItem>按键比色</ComboBoxItem>
                        <ComboBoxItem>触动找色</ComboBoxItem>
                        <ComboBoxItem>触动比色</ComboBoxItem>
                        <ComboBoxItem>AJ找色</ComboBoxItem>
                        <ComboBoxItem>EC找色</ComboBoxItem>
                        <ComboBoxItem>自定义找色</ComboBoxItem>
                        <ComboBoxItem>自定义比色</ComboBoxItem>
                        <ComboBoxItem>锚点找色</ComboBoxItem>
                        <ComboBoxItem>锚点比色</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                <StackPanel Margin="0,7" Orientation="Horizontal">
                    <Image Width="24" Height="24">
                        <Image.Source>
                            <svg:SvgImage Source="/Assets/rect.svg" />
                        </Image.Source>
                    </Image>
                    <TextBox
                        Name="Rect"
                        Width="93"
                        Margin="10,0"
                        Background="Transparent"
                        BorderBrush="#666666"
                        BorderThickness="0,0,0,1"
                        FontSize="14"
                        IsReadOnly="True"
                        Text="{Binding Rect, Mode=TwoWay}" />
                </StackPanel>
                <Button
                    Name="Create"
                    Width="129"
                    Margin="0,10,0,7"
                    HorizontalContentAlignment="Center"
                    FontSize="16">
                    生成
                </Button>
                <TextBox
                    Name="CreateString"
                    Width="129"
                    Height="120"
                    Margin="0,10"
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    BorderBrush="#666666"
                    FontSize="16"
                    IsReadOnly="True"
                    TextWrapping="Wrap" />
                <Button
                    Name="Copy"
                    Width="129"
                    Margin="0,7"
                    HorizontalContentAlignment="Center"
                    FontSize="16">
                    复制
                </Button>
                <Button
                    Name="Clear"
                    Width="129"
                    Margin="0,7"
                    HorizontalContentAlignment="Center"
                    FontSize="16">
                    清空
                </Button>
            </StackPanel>
        </ScrollViewer>

        <Grid
            Name="Grid_Img"
            Margin="170,20,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <ScrollViewer
                Focusable="False"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto">
                <Image
                    Name="Img"
                    Width="{Binding ImgWidth, Mode=TwoWay}"
                    Height="{Binding ImgHeight, Mode=TwoWay}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="{Binding Img, Mode=TwoWay}">
                    <i:Interaction.Behaviors>
                        <ic:EventTriggerBehavior EventName="PointerEnter" SourceObject="{Binding #Img}">
                            <ivc:InvokeCommandAction Command="{Binding Img_PointerEnter}" />
                        </ic:EventTriggerBehavior>
                        <ic:EventTriggerBehavior EventName="PointerLeave" SourceObject="{Binding #Img}">
                            <ivc:InvokeCommandAction Command="{Binding Img_PointerLeave}" />
                        </ic:EventTriggerBehavior>
                        <ic:EventTriggerBehavior EventName="PointerMoved" SourceObject="{Binding #Img}">
                            <ivc:InvokeCommandAction Command="{Binding Img_PointerMoved}" CommandParameter="{Binding ElementName=Img}" />
                        </ic:EventTriggerBehavior>
                        <ic:EventTriggerBehavior EventName="PointerPressed" SourceObject="{Binding #Img}">
                            <ivc:InvokeCommandAction Command="{Binding Img_PointerPressed}" />
                        </ic:EventTriggerBehavior>
                        <ic:EventTriggerBehavior EventName="PointerReleased" SourceObject="{Binding #Img}">
                            <ivc:InvokeCommandAction Command="{Binding Img_PointerReleased}" CommandParameter="{Binding ElementName=Img}" />
                        </ic:EventTriggerBehavior>
                    </i:Interaction.Behaviors>
                </Image>
            </ScrollViewer>
        </Grid>


        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" />

        <Canvas>
            <Rectangle
                Name="SelectRect"
                Width="{Binding RectWidth, Mode=TwoWay}"
                Height="{Binding RectHeight, Mode=TwoWay}"
                Margin="{Binding RectMargin, Mode=TwoWay}"
                Fill="Transparent"
                Focusable="False"
                IsVisible="{Binding Rect_IsVisible, Mode=TwoWay}"
                Stroke="Red"
                StrokeThickness="2" />
        </Canvas>

        <StackPanel
            x:Name="Panel_Loupe"
            Margin="{Binding LoupeMargin, Mode=TwoWay}"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            IsEnabled="False"
            IsVisible="{Binding Loupe_IsVisible, Mode=TwoWay}">
            <Image
                x:Name="Loupe"
                Width="241"
                Height="241"
                Source="{Binding LoupeWriteBmp}"
                Stretch="UniformToFill" />
            <StackPanel
                Width="241"
                Background="#666666"
                Orientation="Horizontal">
                <TextBlock Margin="10,3,0,8" Foreground="#bbbbbb">x</TextBlock>
                <TextBlock
                    Margin="10,8,0,8"
                    FontSize="16"
                    Text="{Binding PointX, Mode=TwoWay}" />
                <TextBlock Margin="70,3,0,8" Foreground="#bbbbbb">y</TextBlock>
                <TextBlock
                    Margin="10,8,0,8"
                    FontSize="16"
                    Text="{Binding PointY, Mode=TwoWay}" />
            </StackPanel>
        </StackPanel>
    </Grid>

</Window>
